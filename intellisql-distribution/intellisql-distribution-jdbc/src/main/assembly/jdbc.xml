<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.1"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.1 http://maven.apache.org/xsd/assembly-2.1.1.xsd">
    <id>jdbc</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <baseDirectory>intellisql-jdbc-${project.version}</baseDirectory>

    <fileSets>
        <!-- Include shaded JDBC driver JAR -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>intellisql-jdbc-${project.version}.jar</include>
            </includes>
            <excludes>
                <exclude>*-sources.jar</exclude>
            </excludes>
        </fileSet>

        <!-- Include README and LICENSE files -->
        <fileSet>
            <directory>${project.basedir}/../../</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>LICENSE</include>
                <include>NOTICE</include>
            </includes>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>

    <files>
        <!-- Generate a README for JDBC distribution -->
        <file>
            <source>${project.basedir}/src/main/resources/README.md</source>
            <outputDirectory>/</outputDirectory>
            <fileMode>0644</fileMode>
        </file>
    </files>
</assembly>
